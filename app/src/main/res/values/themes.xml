<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Qulture" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#40C0A8</item>
        <item name="colorPrimaryVariant">#FF03DAC5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightGreen</item>
        <item name="colorSecondaryVariant">@color/darkGreen</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="backgroundColor">#FF03DAC5</item>
    </style>
    <string name="mode">Day</string>

    <style name="DefalutTextStyleButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="LoadingScreen">
        <item name="android:background">#40C0A8</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefalutTextStyleView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="TitleTextTile">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="SubtitleTextStyle">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/darkGreen</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- Style pour la navigation bar -->

    <style name="BottomNavigationBar" parent="Widget.Design.BottomNavigationView">
        <item name="android:minHeight">35dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/kanit</item>
    </style>

</resources>